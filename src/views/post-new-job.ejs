<div class="card w-75 mx-auto mt-4 white-shadow" style="width: 18rem">
  <div class="card-body">
    <h2 class="card-title fw-light text-center mb-3">Post a new Job</h2>
    <% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
    <%}%>
    <form>
      <!-- job category dropdown -->
      <select class="form-select mb-3" aria-label="Default select example">
        <option selected>Select job category</option>
        <option value="1">Tech</option>
        <option value="2">Non Tech</option>
      </select>

      <!-- job designation dropdown -->
      <select class="form-select mb-3" aria-label="Default select example">
        <option selected>Select job designation</option>
        <option value="1">HR</option>
        <option value="2">SDE</option>
        <option value="2">DevOps</option>
        <option value="2">MERN Developer</option>
        <option value="2">MEAN Developer</option>
        <option value="2">Java Developer</option>
        <option value="2">Back-End Developer</option>
        <option value="2">Front-End Developer</option>
        <option value="2">Full-Stack Developer</option>
      </select>

      <!-- job location -->
      <div class="mb-3">
        <label for="jobLocationInput" class="form-label"
          >Enter job location</label
        >
        <input type="text" class="form-control" id="jobLocationInput" />
      </div>

      <!-- company name -->
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Company Name</span>
        <input
          type="text"
          class="form-control"
          aria-label="Company Name"
          aria-describedby="basic-addon1"
        />
      </div>

      <!-- salary and openings -->
      <div class="d-md-flex mb-3">
        <!-- salary -->
        <div class="w-75 mb-3 me-md-2">
          <input
            type="text"
            class="form-control"
            id="jobLocationInput"
            placeholder="enter salary"
          />
        </div>

        <!-- total openings -->
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"
            >Total Positions</span
          >
          <input
            type="number"
            class="form-control"
            aria-label="Number"
            aria-describedby="basic-addon1"
          />
        </div>
      </div>

      <!-- skills & last date to apply -->
      <div class="d-md-flex align-items-base mb-3">
        <!-- skills -->
        <select
          class="form-select mb-3 mb-md-0 me-md-2"
          multiple
          id="skillsRequired"
          aria-label="Default select example"
        >
          <option selected>Select Required Skills</option>
          <option value="React">React</option>
          <option value="NodeJs">NodeJs</option>
          <option value="Angular">Angular</option>
          <option value="MongoDB">MongoDB</option>
          <option value="Express">Express</option>
          <option value="JavaScript">JavaScript</option>
          <option value="SQL">SQL</option>
          <option value="Java">Java</option>
          <option value="SpringBoot">SpringBoot</option>
          <option value="Data Structures & Algo">Data Structures & Algo</option>
          <option value="Python">Python</option>
          <option value="C">C</option>
          <option value="C++">C++</option>
          <option value="C#">C#</option>
          <option value="Go">Go</option>
          <option value="Ruby">Ruby</option>
        </select>

        <!-- apply by -->
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">Apply by</span>
          <input
            type="date"
            class="form-control"
            aria-label="Apply by"
            aria-describedby="basic-addon1"
          />
        </div>
      </div>

      <button type="submit" class="btn btn-success w-100">Submit</button>
    </form>
  </div>
</div>
