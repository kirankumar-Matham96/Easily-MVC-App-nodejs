<div class="container d-flex flex-column justify-content-between applicants-container">
  <table class="table table-striped">
    <thead class="text-dark">
      <tr>
        <th class="fs-5 fw-light" scope="col">#</th>
        <th class="fs-5 fw-light" scope="col">Name</th>
        <th class="fs-5 fw-light" scope="col">Email</th>
        <th class="fs-5 fw-light" scope="col">Contact</th>
        <th class="fs-5 fw-light" scope="col">Resume</th>
      </tr>
    </thead>
    <tbody>
      <%if(applicants.length > 0){%> <%applicants.forEach((applicant, index) =>
      {%>
      <tr>
        <td scope="row"><%=index+1%></td>
        <td><%=applicant.name%></td>
        <td><%=applicant.email%></td>
        <td><%=applicant.contact%></td>
        <td>
          <a
            href="/files/<%=applicant.resumePath%>"
            target="_blank"
            class="btn btn-primary"
            >View</a
          >
        </td>
      </tr>
      <%})%> <%}%>
    </tbody>
  </table>
  
  
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center mt-5">
      <li class="page-item">
        <a class="page-link" href="/jobs/applicants/<%=jobId%>/?page=<%=currentPage-1%>&limit=12"
          <%if(currentPage == 1){%>
            disabled
            <%}%>
            >
            <span aria-hidden="true">&laquo;</span>&nbsp;
            Prev
            </a
          >
        </li>
        <li class="page-item">
          <a class="page-link bg-info opacity-75 text-primary fw-bolder border-success" href="#" disabled><%=currentPage%></a>
        </li>
        <li class="page-item">
          <a class="page-link" href="/jobs/applicants/<%=jobId%>/?page=<%=currentPage+1%>&limit=12"
            <%if(currentPage == totalPages){%>
              disabled
              <%}%>
              >
              Next&nbsp;
              <span aria-hidden="true">&raquo;</span>
              </a
              >
            </li>
          </ul>
        </nav>
</div>
      
 
      <%if(userEmail && locals.lastVisit){%>
        <div
          class="container-fluid bg-black text-success position-fixed bottom-0 start-0"
        >
          Your last visit was on: <%= locals.lastVisitFormatted %>
        </div>
        <%}%>